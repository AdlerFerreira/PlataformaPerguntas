<%- include('Partials/header.ejs');%>

    <body>
        <%- include('Partials/navbar.ejs');%>
            <div class="container">
                <hr>
                <h1>Perguntas</h1>
                <hr>

                <% perguntas.forEach(pergunta=>{ %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h6>
                                <%= pergunta.titulo %>
                            </h6>
                        </div>
                        <div class="card-footer">                   
                                <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>                        
                        </div>
                    </div>
                    <% }) %>
            </div>



    </body>

    <%- include('Partials/footer.ejs');%>